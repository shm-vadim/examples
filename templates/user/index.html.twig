{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>email</th>
                <th>Money</th>
                <th>All money</th>
                <th>Limit time</th>
                <th>Attempts</th>
                <th>Examples</th>
                <th>Profiles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.setER(uR).id }}</td>
                <td>{{ user.username}}</td>
                <td>{{ user.email}}</td>
                <td>{{ user.money}}</td>
                <td>{{ user.allMoney}}</td>
                <td>{{ user.limitTime}}</td>
                <td>{{ user.attemptsCount}}</td>
                <td>{{ user.examplesCount}}</td>
                <td>{{ user.profilesCount}}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}