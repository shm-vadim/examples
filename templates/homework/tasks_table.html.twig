{% macro tasks_table(title, tasks, attemptRepository) %}
<h2>{{ title }}</h2>

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Задание</th>
            <th>Время добавления</th>
            <th>Время окончания</th>
            <th>Выполнено попыток</th>
            <th>Средняя оценка</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        {% for number, task in sortByAddTime(tasks)|reverse %}
        <tr>
            <td>{{ number + 1 }}</td>
            <td><a href="{{ path('settings_show', {'id': task.settings.id}) }}">{{ task.settings.description }}</a></td>
            <td>{{ task.addTime }}</td>
            <td>{{ task.limitTime }}</td>
            <td>{{ attemptRepository.findByTaskAndCurrentUser(task)|length }}</td>
            <td>{{ attemptRepository.getAverageRatingByTaskAndCurrentUser(task) ?? '-' }}</td>
            <td></td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{%endmacro %}