{% extends 'main.html.twig' %}

{% block title %}
    Домашнее задание
{% endblock %}

{% block breadcrumbs %}
    {{ include('task/breadcrumbs/index.html.twig') }}
{% endblock %}

{% block main %}
    <h1>Домашнее задание</h1>

    <ul>
        <li><a href="{{ path('task_new') }}" role="button" class="btn btn-success">Создать задание</a></li>
    </ul>
    {% from 'task/list_table.html.twig' import list_table %}
    <div class="actual">
        {{ list_table('Актуальные', actual, true) }}
