<h2>Войти с помощью</h2>
<script type="text/javascript" src="https://vk.com/js/api/openapi.js?157"></script>
<script type="text/javascript">
  VK.init({apiId: {{vk_app_id}}});
</script>

<!-- VK Widget -->
<div id="vk_auth"></div>
<script type="text/javascript">
  VK.Widgets.Auth("vk_auth", {
"authUrl": "{{path("api_register_vk")}}",
onAuth: function (d) {
var url=this.authUrl+"?";
for (var k in d) {
url+=k+"="+encodeURIComponent(d[k])+"&";
}
location.href=url;
}});
</script>