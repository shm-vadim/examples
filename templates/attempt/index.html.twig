{%extends 'base.html.twig'%}

{%block title "Архив попыток"%}

{%block main%}
<h1>Архив попыток</h1>
{%if attempts%}
<table>
<thead>
	<th>№</th>
	<th>Начало попытки</th>
	<th>Конец попытки</th>
	<th>Примеров в попытке</th>
	<th>Решено примеров</th>
	<th>Ошибок</th>
	<th>Оценка</th>
</thead>
<tbody>
{%for att in attempts%}
{%set att=att.setER(attR)%}
<tr>
	<td><a href="{{path("attempt_show", {'id': att.id})}}">{{att.title}}</a></td>
	<td>{{att.addTime}}</td>
	<td>{{att.finishTime}}</td>
	<td>{{att.examplesCount}}</td>
	<td>{{att.solvedExamplesCount}}</td>
	<td>{{att.errorsCount}}</td>
	<td>{{att.rating}}</td>
</tr>
{%endfor%}
</tbody>
<table>
{%else%}
Нет начатых попыток
{%endif%}
{%endblock%}

{%block javascripts%}
{{parent()}}
<script src="/js/jquery.datatables.min.js"></script>
<script>
$("table").DataTable({
ordering: false,
searching: false,
language: {
url: "/js/datatables.language.json",
}
});
</script>
{%endblock%}