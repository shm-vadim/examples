{%extends 'main.html.twig'%}

{%block title att.title%}

{%block main%}
<div class="row">
<h1>Статистика</h1>

<ul class="list-group">
	<li>Начало попытки: {{att.addTime}}</li>
	<li>Конец попытки: {{att.finishTime}}</li>
	<li>Примеров в попытке: {{att.examplesCount}}</li>
	<li>Решено примеров: {{att.solvedExamplesCount}}</li>
<li>Ошибок: {{att.errorsCount}}</li>
	<li>Оценка: {{att.rating}}</li>
	<li><a href="{{path("attempt_profile", {"id": att.id})}}">Настройки этой попытки</a></li>
</ul>
</div>

<div class="row">
<h1>Примеры</h1>

<table class="table table-striped table-bordered">
	<thead class="thead-light">
		<th>№</th>
		<th>Пример</th>
		<th>Ответ</th>
	</thead>
<tbody>
	{%for ex in examples|reverse%}
{%if not ex.isRight%}
<tr>
<td colspan="3">
<h6>{{(ex.answer is not null) ? "Ошибка №"~exR.getErrorNum(ex) : "Пример не решен"}}</h6>
</td>
</tr>
{%endif%}
	<tr>
		<td>{{exR.getNumber(ex)}}</td>
		<td>{{ex}}</td>
		<td>{{ex.answer ?? '-'}}</td>
	</tr>
{%else%}
<tr>
<td colspan="3">Нет Примеров в попытке</td>
</tr>
	{%endfor%}
</tbody>
</table>
</div>
{%endblock%}