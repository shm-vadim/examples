        <div id="vk_community_messages"></div>
        <script type="text/javascript">
            VK.Widgets.CommunityMessages("vk_community_messages", 177660826, {
                expanded: "1",
                tooltipButtonText: "Есть вопрос?"
            });
        </script>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/contacts.js') }}"></script>
{% endblock %}